<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
		<managed-bean>
			<managed-bean-name>indexController</managed-bean-name>
			<managed-bean-class>id.fai.jsf.blog.IndexController</managed-bean-class>
			<managed-bean-scope>request</managed-bean-scope>
			<managed-property>
				<property-name>firstIndex</property-name>
				<value>#{param.firstIndex}</value>
			</managed-property>
			<managed-property>
				<property-name>maxResult</property-name>
				<value>#{param.maxResult}</value>
			</managed-property>
		</managed-bean>
		
		<managed-bean>
			<managed-bean-name>postController</managed-bean-name>
			<managed-bean-class>id.fai.jsf.blog.PostController</managed-bean-class>
			<managed-bean-scope>view</managed-bean-scope>
			
		</managed-bean>              
 </faces-config>             